<%- include('partials/header', { showSearchBar: false, showLogoutButton: false }) %>

<main class="register-sivu">
    <h1>Rekisteröidy</h1>
    <section class="rekisterointi">
        <form action="/register" method="POST">
            <label for="email">Sähköposti:</label>
            <input type="email" id="email" name="email" required>
            
            <label for="username">Käyttäjänimi:</label>
            <input type="text" id="username" name="username" required>
            
            <label for="password">Salasana (valinnainen):</label>
            <input type="password" id="password" name="password">
            
            <button type="submit">Rekisteröidy</button>
        </form>
        <p>Onko sinulla jo tili? <a href="/login">Kirjaudu sisään tästä</a>.</p>
    </section>
</main>
