<%- include('partials/header') %>

<main class="kotisivu">
    <h1>Selaa Reseptejä</h1>
    
    <section class="hakulomake">
        <form action="/reseptit" method="GET">
            <input type="text" name="haku" placeholder="Etsi reseptiä...">
            <button type="submit">Hae</button>
        </form>
    </section>

    <section class="kategoriat">
        <h2>Kategoriat</h2>
        <div class="kategoria-lista">
            <% kategoriat.forEach(kategoria => { %>
                <a href="/reseptit?kategoria=<%= kategoria.strCategory %>" class="kategoria-kortti">
                    <h3><%= kategoria.strCategory %></h3>
                </a>
            <% }); %>
        </div>
    </section>
</main>