<!DOCTYPE html>
<html lang="fi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ReseptiGuru</title>
    <link rel="stylesheet" href="/styles.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Playfair+Display:wght@700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <header>
      <nav>
        <a href="/" class="logo">ReseptiGuru</a>
        <% if (typeof currentRoute !== 'undefined' && currentRoute !== '/login' && currentRoute !== '/register') { %>
          <div class="logout">
            <form action="/logout" method="POST">
              <button type="submit">Kirjaudu ulos</button>
            </form>
          </div>
        <% } %>
      </nav>
    </header>
  </body>
</html>
